{
    "coc.preferences.colorSupport": true,
    "python.jediEnabled": false,
    "python.formatting.provider": "black",
    "python.globalModuleInstallation": true,
    "python.pipenvPath": "/usr/bin/pipenv",
    "python.venvFolders": "~/.local/share/virtualenvs/",
    "python.linting.flake8Path": "/usr/bin/flake8",
    "python.linting.flake8Enabled": true,
    "python.linting.banditPath": "/usr/bin/bandit",
    "python.linting.banditEnabled": true,
    "python.linting.pep8Path": "/usr/bin/pep8",
    "python.linting.pep8Enabled": true,
    "python.linting.pep8Args": ["--max-line-length=120", "--max-doc-length=120"],
    "python.linting.pydocstylePath": "/usr/bin/pydocstyle",
    "python.linting.pydocstyleEnabled": true,
    "python.linting.pylintEnabled": true
}
